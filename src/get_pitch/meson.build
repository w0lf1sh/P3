# Programas del proyecto

# Programa get_pitch
exe = 'get_pitch'
src = ['get_pitch.cpp',  'pitch_analyzer.cpp']

get_pitch = executable(
    exe,
    sources: src,
    include_directories: inc,
    link_args: ['-lm', '-lsndfile'],
    link_with: lib_pav,
    install: true,
)

